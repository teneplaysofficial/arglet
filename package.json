{
  "name": "arglet",
  "displayName": "Arglet",
  "version": "1.0.0",
  "description": "A tiny helper that lets your CLI args lead the configuration merging process",
  "private": false,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/teneplaysofficial/arglet.git"
  },
  "homepage": "https://teneplaysofficial.github.io/arglet",
  "funding": "https://github.com/sponsors/teneplaysofficial",
  "keywords": [
    "cli",
    "args",
    "config",
    "merge",
    "argv",
    "developer-tools"
  ],
  "author": "Sriman",
  "license": "Apache-2.0",
  "publishConfig": {
    "access": "public",
    "provenance": true
  },
  "type": "module",
  "files": [
    "dist"
  ],
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.cts",
  "exports": {
    ".": {
      "require": "./dist/index.cjs",
      "import": "./dist/index.mjs"
    },
    "./package.json": "./package.json"
  },
  "scripts": {
    "prepare": "husky",
    "test": "pnpm type-check && node --test --experimental-test-coverage",
    "type-check": "tsc --noEmit",
    "build": "tsdown",
    "release": "release-hub",
    "fix": "biome check --write",
    "lint": "biome check"
  },
  "lint-staged": {
    "*.{js,ts,json}": "biome check --write"
  },
  "packageManager": "pnpm@10.26.2+sha512.0e308ff2005fc7410366f154f625f6631ab2b16b1d2e70238444dd6ae9d630a8482d92a451144debc492416896ed16f7b114a86ec68b8404b2443869e68ffda6",
  "devDependencies": {
    "@biomejs/biome": "2.3.10",
    "@types/node": "^25.0.3",
    "husky": "9.1.7",
    "lint-staged": "16.2.7",
    "release-hub": "1.0.0-beta.1",
    "tsdown": "0.18.4",
    "typescript": "5.9.3"
  }
}
