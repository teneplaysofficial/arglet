{
  "name": "arglet",
  "displayName": "Arglet",
  "version": "0.0.0",
  "description": "A tiny helper that lets your CLI args lead the configuration merging process",
  "private": false,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/teneplaysofficial/arglet.git"
  },
  "homepage": "https://teneplaysofficial.github.io/arglet",
  "funding": "https://github.com/sponsors/teneplaysofficial",
  "keywords": [
    "cli",
    "args",
    "config",
    "merge",
    "argv",
    "developer-tools"
  ],
  "author": "Sriman",
  "license": "Apache-2.0",
  "publishConfig": {
    "access": "public",
    "provenance": true
  },
  "type": "module",
  "files": [
    "dist"
  ],
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.cts",
  "exports": {
    ".": {
      "require": "./dist/index.cjs",
      "import": "./dist/index.mjs"
    },
    "./package.json": "./package.json"
  },
  "scripts": {
    "prepare": "husky",
    "test": "pnpm type-check && node --test --experimental-test-coverage",
    "type-check": "tsc --noEmit",
    "build": "tsdown",
    "release": "release-hub",
    "fix": "biome check --write",
    "lint": "biome check"
  },
  "lint-staged": {
    "*.{js,ts,json}": "biome check --write"
  },
  "packageManager": "pnpm@10.26.1+sha512.664074abc367d2c9324fdc18037097ce0a8f126034160f709928e9e9f95d98714347044e5c3164d65bd5da6c59c6be362b107546292a8eecb7999196e5ce58fa",
  "devDependencies": {
    "@biomejs/biome": "2.3.10",
    "@types/node": "^25.0.3",
    "husky": "9.1.7",
    "lint-staged": "16.2.7",
    "release-hub": "1.0.0-beta.0",
    "tsdown": "0.18.1",
    "typescript": "5.9.3"
  }
}
